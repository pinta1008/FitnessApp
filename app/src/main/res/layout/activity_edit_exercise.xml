<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".vjezbe.EditExerciseActivity">

    <com.google.android.material.imageview.ShapeableImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="10dp"
        android:id="@+id/exercisePic"
        android:padding="8dp"
        android:layout_gravity="center"
        android:scaleType="centerCrop"
        android:src="@drawable/uploadimg"
        app:shapeAppearanceOverlay="@style/roundedImageViewRounded"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:padding="24dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Uredi"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/lavender"
            android:gravity="center_horizontal"
            android:layout_marginVertical="5dp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:textColorHint="@color/lavender"
            android:layout_height="wrap_content"
            app:boxCornerRadiusTopEnd="25dp"
            app:boxCornerRadiusBottomEnd="25dp"
            app:boxCornerRadiusTopStart="25dp"
            app:boxCornerRadiusBottomStart="25dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etExeName"
                android:layout_width="match_parent"
                android:textColor="@color/lavender"
                android:layout_height="wrap_content"
                android:hint="Naziv vjeÅ¾be"
                android:inputType="textPersonName|textCapWords"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_height="wrap_content"
            android:textColorHint="@color/lavender"
            app:boxCornerRadiusTopEnd="25dp"
            app:boxCornerRadiusBottomEnd="25dp"
            app:boxCornerRadiusTopStart="25dp"
            app:boxCornerRadiusBottomStart="25dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etExeDesc"
                android:textColor="@color/lavender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Opis"
                android:inputType="textPersonName|textCapWords"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_height="wrap_content"
            android:textColorHint="@color/lavender"
            app:boxCornerRadiusTopEnd="25dp"
            app:boxCornerRadiusBottomEnd="25dp"
            app:boxCornerRadiusTopStart="25dp"
            app:boxCornerRadiusBottomStart="25dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etExeInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/lavender"
                android:hint="Informacije"
                android:inputType="textPersonName|textCapWords"/>
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/pickCategory"
            android:hint="Odabir kategorija"
            android:textColorHint="@color/lavender"
            android:background="@drawable/lavender_border"
            android:layout_marginTop="5dp"
            android:padding="16dp"
            android:gravity="start|center_vertical"
            android:textColor="@color/lavender"
            android:drawableEnd="@drawable/ic_baseline_keyboard_arrow_down_24"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnUpdateExe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            app:cornerRadius="25dp"
            android:text="Potvrdi"/>

    </LinearLayout>

</LinearLayout>